{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_notification_index' %}

{% block main %}
    <h2> Notification Config List</h2>
    <div class="row">
        <div class="col-sm-offset-8 col-sm-4 text-right">
            <div class="section actions">
                <a href="{{ path('admin_notification_new') }}" class="btn btn-lg btn-block btn-success">
                    <i class="fa fa-plus" aria-hidden="true"></i> Create Notification Config
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-middle-aligned">
        <thead>
            <tr>
                <th scope="col">Header</th>
                <th scope="col">APIKey </th>
                <th scope="col" class="text-center">URL</th>
                <th scope="col" class="text-center">Platform</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
        {% for notification in notifications %}
            <tr>
                <td>{{ notification.header }}</td>
                {# it's not mandatory to set the timezone in localizeddate(). This is done to
                   avoid errors when the 'intl' PHP extension is not available and the application
                   is forced to use the limited "intl polyfill", which only supports UTC and GMT #}
                <td> {{ notification.apikey }} </td>
                <td> {{ notification.url }} </td>
                <td> {{ notification.platform }} </td>
                <td class="text-right">
                    <div class="item-actions">
                        {#<a href="{{ path('admin_post_show', {id: notification.id}) }}" class="btn btn-sm btn-default">#}
                            {#<i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show'|trans }}#}
                        {#</a>#}

                        {#<a href="{{ path('admin_post_edit', {id: notification.id}) }}" class="btn btn-sm btn-primary">#}
                            {#<i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}#}
                        {#</a>#}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                {#<td colspan="4" align="center">{{ 'post.no_posts_found'|trans }}</td>#}
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
